<!DOCTYPE html>
<html lang="pr-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Catalogo</title>
</head>
    <body>
        <nav>
            <ul>
                <li>
                    <a href="/criar">Criar Novo Desenho</a>
                    <a href="/">PAGINA INICIAL</a>

                </li>
            </ul>
        </nav>

        <% if(message != "") {  %>
            <section id="message">
                <p><%= message %></p><span id="close">&times;</span>
            </section>
        <% }  %>

            <section id="corpo-principal">          
                <h2 id="desenho-antigo">DESENHOS ANTIGOS<h2>
                 
                        <section id = "principal">

                            <% catalogos.forEach(function(item) { %>

                        
                            <article id = "desenho">
                                <ul>                                
                                    <a href ="/detalhe/<%= item.id%>"><img src="<%= item.imagem%>" alt="imagem" width="200" height = "300px"</a>                         
                                                                                                                                                           
                                    <li>Nome:<%= item.nome %></li>                                    
                                    <li>Ano:<%= item.ano %></li>                                                                     
                                </ul>
                                <a href ="/editar/<%= item.id%>">EDITAR</a>
                            </article>

                        </section>
                        <% }) %>                                  
                
            </section>

            <script src="/public/js/script.js"></script>
    </body>
</html>