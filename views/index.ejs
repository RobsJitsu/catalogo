<!DOCTYPE html>
<html lang="pr-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Catalogo</title>
</head>
    <body>
        <nav>
            <ul>
                <li>
                    <a href="/criar">Criar Novo Desenho</a>                    

                </li>
            </ul>
        </nav>

        <% if(message != "") {  %>
            <section id="message">
                <p><%= message %></p><span id="close">&times;</span>
            </section>
        <% }  %>

        <header>
            <article>
                <h2>CARTOON BLUE</h2>
            </article>
        </header>

            <section id="corpo-principal">

                <h3>DESENHOS ANTIGOS<h3>                      

                            <% catalogos.forEach(function(item) { %>

                        <section class= "principal">
                            <article id = "desenho">
                                <ul>                                
                                    <a href ="/detalhe/<%= item.id%>"><img src="<%= item.imagem%>" alt="imagem" width="200" height = "300px"</a>                       
                                                                                                                                                           
                                    <li>Nome:<%= item.nome %></li>                                    
                                    <li>Ano:<%= item.ano %></li>                                                                     
                                </ul>
                                <a href ="/editar/<%= item.id%>">EDITAR</a>
                            </article>
                        </section>

                        <% }) %>              
                
            </section>

            <script src="/public/js/script.js"></script>
    </body>
</html>